{
  "name": "6k-tailwind",
  "scripts": {
    "watch-css": "postcss './src/css/style.css' --config='./config/postcss.config.js' --verbose --output './style.css' --watch",
    "build-css": "postcss './src/css/style.css' --config='./config/postcss.config.js' --verbose --output './style.css' --minify --env 'production'",
    "watch": "concurrently \"npm:watch-*\"",
    "build": "concurrently \"npm:build-*\""
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "tailwindcss": "^3.1.8"
  }
}
